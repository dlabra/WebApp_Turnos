@model Turnos.Models.Especialidad

<h3>Estas seguro que deseas <strong class="red-text">eliminar</strong> la especialidad <strong>@Html.DisplayFor(modelo
        =>
        modelo.Descripcion)?</h3>
<div class="row">
    <div class="row">
        <div class="input-field col s12">
            <i class="material-icons prefix">description</i>
            <input asp-for="Descripcion" type="text" class="validate" disabled>
            <label asp-for="Descripcion">Nombre</label>
            <span asp-validation-for="Descripcion"></span>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col s6 m6">
                <button class="btn waves-effect waves-light red accent-4" type="submit" name="action">Eliminar
                    <i class="material-icons right">delete</i>
                </button>
            </div>

            <div class="col s6 m6">
                <a asp-action="Index" class="waves-effect waves-light btn grey darken-4">
                    <i class="material-icons left">undo</i>Volver
                </a>
            </div>
        </div>
    </form>
</div>