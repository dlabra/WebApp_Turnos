@model Turnos.Models.Especialidad

<h4>Especialidad</h4>

<div class="row">
    <form asp-action="Create" class="col s12">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">description</i>
                <input asp-for="Descripcion" type="text" class="validate">
                <label asp-for="Descripcion"></label>
                <span asp-validation-for="Descripcion"></span>
            </div>
        </div>
        <div class="row">
            <div class="col s6 m6">
                <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Agregar
                    <i class="material-icons right">send</i>
                </button>
            </div>

            <div class="col s6 m6">
                <a asp-action="Index" class="waves-effect waves-light btn grey darken-4">
                    <i class="material-icons left">undo</i>Volver
                </a>
            </div>
        </div>
    </form>
</div>