@model Turnos.Models.Medico

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar</title>
</head>

<body>

    <h4>Medico</h4>
    <hr />
    <div class="row">
        <div>
            <form asp-action="Create" class="col s12">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        <i class="material-icons prefix">account_circle</i>
                        <input asp-for="Nombre" type="text" class="validate">
                        <label asp-for="Nombre">Nombre</label>
                        <span asp-validation-for="Nombre"></span>
                    </div>
                    <div class="input-field col s12 m6">
                        <i class="material-icons prefix"></i>
                        <input asp-for="Apellido" type="text" class="validate">
                        <label asp-for="Apellido">Apellido</label>
                        <span asp-validation-for="Apellido"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        <i class="material-icons prefix">home</i>
                        <input asp-for="Direccion" type="text" class="validate">
                        <label asp-for="Direccion">Direccion</label>
                        <span asp-validation-for="Direccion"></span>
                    </div>
                    <div class="input-field col s12 m6">
                        <i class="material-icons prefix">phone</i>
                        <input asp-for="Telefono" type="text" class="validate">
                        <label asp-for="Telefono">Telefono</label>
                        <span asp-validation-for="Telefono"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        <i class="material-icons prefix">email</i>
                        <input asp-for="Email" type="text" class="validate">
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        <i class="material-icons prefix">date_range</i>
                        <input asp-for="HorarioAtencionDesde" type="text" class="validate datepicker">
                        <label asp-for="HorarioAtencionDesde">Horario de Atencion Desde</label>
                        <span asp-validation-for="HorarioAtencionDesde"></span>
                    </div>
                    <div class="input-field col s12 m6">
                        <i class="material-icons prefix">date_range</i>
                        <input asp-for="HorarioAtencionHasta" type="text" class="validate datepicker">
                        <label asp-for="HorarioAtencionHasta">Horario de Atencion Hasta</label>
                        <span asp-validation-for="HorarioAtencionHasta"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        <i class="material-icons prefix">star_rate</i>
                        <select name="IdEspecialidad" asp-items="ViewBag.ListaEspecialidades"></select>
                    </div>
                </div>

                <div class="row">
                    <div class="col s6 m6">
                        <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Agregar
                            <i class="material-icons right">send</i>
                        </button>
                    </div>

                    <div class="col s6 m6">
                        <a asp-action="Index" class="waves-effect waves-light btn grey darken-4">
                            <i class="material-icons left">undo</i>Volver
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>



</body>

</html>
