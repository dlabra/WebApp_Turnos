@model Turnos.Models.Medico

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>

<body>

    <h3>Estas seguro que deseas <strong class="red-text">eliminar</strong> al medico <strong>@Html.DisplayFor(modelo =>
            modelo.Nombre)
            @Html.DisplayFor(modelo =>
            modelo.Apellido)</strong>?</h3>
    <div>
        <hr />
        <div class="row">
            <div class="row">
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate" disabled>
                    <label asp-for="Nombre">Nombre</label>
                    <span asp-validation-for="Nombre"></span>
                </div>
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix"></i>
                    <input asp-for="Apellido" type="text" class="validate" disabled>
                    <label asp-for="Apellido">Apellido</label>
                    <span asp-validation-for="Apellido"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">home</i>
                    <input asp-for="Direccion" type="text" class="validate" disabled>
                    <label asp-for="Direccion">Direccion</label>
                    <span asp-validation-for="Direccion"></span>
                </div>
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">phone</i>
                    <input asp-for="Telefono" type="text" class="validate" disabled>
                    <label asp-for="Telefono">Telefono</label>
                    <span asp-validation-for="Telefono"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">email</i>
                    <input asp-for="Email" type="text" class="validate" disabled>
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">date_range</i>
                    <input asp-for="HorarioAtencionDesde" type="text" class="validate" disabled>
                    <label asp-for="HorarioAtencionDesde">HorarioAtencionDesde</label>
                    <span asp-validation-for="HorarioAtencionDesde"></span>
                </div>
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">date_range</i>
                    <input asp-for="HorarioAtencionHasta" type="text" class="validate" disabled>
                    <label asp-for="HorarioAtencionHasta">HorarioAtencionHasta</label>
                    <span asp-validation-for="HorarioAtencionHasta"></span>
                </div>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdMedico" />
            <div class="row">
                <div class="col s6 m6">
                    <button class="btn waves-effect waves-light red accent-4" type="submit" name="action">Eliminar
                        <i class="material-icons right">delete</i>
                    </button>
                </div>

                <div class="col s6 m6">
                    <a asp-action="Index" class="waves-effect waves-light btn grey darken-4">
                        <i class="material-icons left">undo</i>Volver
                    </a>
                </div>
            </div>
        </form>
    </div>
</body>

</html>
