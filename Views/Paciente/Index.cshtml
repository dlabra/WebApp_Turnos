@* Agregamos el modelo paciente,IEnumerable para poder recorrerla *@
@model IEnumerable<Turnos.Models.Paciente>

<p>
    <a asp-action="Create" class="btn-floating btn-large green darken-1"><i class="large material-icons">add</i></a>
</p>
<table class="responsive-table highlight z-depth-2 blue lighten-5">
    <thead class="green darken-1 white-text">
        <tr>
            <th>
                @Html.DisplayNameFor(modelo => modelo.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(modelo => modelo.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(modelo => modelo.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(modelo => modelo.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(modelo => modelo.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modeloItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modeloItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modeloItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modeloItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modeloItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPaciente"><i class="material-icons">edit</i></a>
                    <a asp-action="Details" asp-route-id="@item.IdPaciente"><i class="material-icons grey-text">info</i></a>
                    <a asp-action="Delete" asp-route-id="@item.IdPaciente"><i class="material-icons red-text">delete</i></a>
                </td>
            </tr>
        }
    </tbody>
</table>